<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/user_cell_gap"
    android:paddingRight="@dimen/user_cell_gap"
    android:orientation="vertical"
    tools:context=".GroupActivity" >

 	<TextView 
      	android:id="@+id/activity_group_name"  
	    android:text="Group Name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />	
        	
    <TextView
        android:id="@+id/activity_group_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:paddingBottom="20dp"	    
        android:text="Group Description"
        android:textAppearance="?android:attr/textAppearanceMedium" /> 	
    
    <GridView
        android:id="@+id/activity_group_users"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
	    android:verticalSpacing="@dimen/user_cell_gap"
	    android:horizontalSpacing="@dimen/user_cell_gap"
		android:numColumns="2"
	    android:gravity="center" />

</LinearLayout>