<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d0d4d9"    
    tools:context=".EventsForOwnerActivity" >

    <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="148dp"
    	android:paddingTop="12dp"         
    	android:paddingLeft="12dp"
    	android:paddingRight="12dp"        
        android:dividerHeight="12dp"
        android:background="@drawable/person_background"
	    android:paddingBottom="@dimen/activity_vertical_margin"	
    	android:orientation="horizontal" >       
        
    	<ImageView
	        android:id="@+id/activity_owner_image"
	        android:layout_width="120dp"
	        android:layout_height="120dp"
	        android:src="@drawable/generic_avatar_image"
	        android:scaleType="centerCrop"
	        android:padding="2dp"
	        android:background="#FFFFFF"
	        android:onClick="editowner" />
    	
    	<LinearLayout
    		android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:paddingLeft="12dp"
    		android:orientation="vertical" >
	        
    	    <TextView 
	        	android:id="@+id/activity_owner_name"  
	        	android:paddingTop="2dp"  	        
    	        android:text="Alphonzo Malesquez"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:textColor="#FFFFFF"
		        android:shadowColor="#000000"
		        android:shadowDx="3.5"
		        android:shadowDy="3.5"
		        android:shadowRadius="3.14"		        
    	        />
    		
    	    <Button
    	        android:layout_width="match_parent"
    	        android:layout_height="wrap_content"
    	        android:layout_marginLeft="16dp"
    	        android:layout_marginRight="16dp"
    	        android:layout_marginTop="12dp"
    	        android:layout_gravity="bottom"
    	        android:background="@drawable/round_green_double_shadow"
    	        android:gravity="center"
    	        android:includeFontPadding="false"
    	        android:onClick="editProfile"
    	        android:padding="0dp"
    	        android:text="@string/activity_owner_edit_profile"
				android:shadowColor="#23282A"
				android:shadowDx="0"
				android:shadowDy="-2"
				android:shadowRadius="3.14"    	        
    	        android:textColor="#FFFFFFFF" />
    	    
    	</LinearLayout>
    </LinearLayout>
    
    <TextView
        android:id="@+id/events_for_owner_none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/no_owner_events"
        android:textStyle="italic"
        android:textAppearance="?android:attr/textAppearanceMedium" />       

   	<ListView
        android:id="@+id/activity_owner_events"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
    	android:paddingBottom="8dp"
    	android:paddingLeft="8dp"
    	android:paddingRight="8dp"        
        android:dividerHeight="8dp"
        android:divider="#d0d4d9"        
        android:drawSelectorOnTop="false" />        
    

</LinearLayout>
