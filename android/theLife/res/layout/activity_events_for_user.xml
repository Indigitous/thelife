<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d0d4d9"    
    tools:context=".EventsForUserActivity" >
    
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:src="@drawable/person_background"
        android:scaleType="centerCrop"        
        android:padding="0dp" />
    
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        android:padding="0dp" />
    
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#a7a7a7"
        android:padding="0dp" />
    
    <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="181dp"
    	android:layout_marginTop="-181dp"
    	android:paddingTop="12dp"         
    	android:paddingLeft="12dp"
    	android:paddingRight="12dp"
        android:dividerHeight="8dp"
	    android:paddingBottom="0dp"	
    	android:orientation="horizontal" >
    	
        <LinearLayout
	        android:layout_width="154dp"
	        android:layout_height="154dp"
		    android:padding="1dp"
		    android:background="#a7a7a7" >	        
            
	    	<ImageView
		        android:id="@+id/activity_user_image"
		        android:layout_width="152dp"
		        android:layout_height="152dp"
		        android:layout_gravity="center"
		        android:src="@drawable/generic_avatar_image"
		        android:scaleType="centerCrop"
		        android:padding="2dp"
		        android:background="#FFFFFF" />
    	</LinearLayout>      
        
    	<LinearLayout
    		android:layout_width="match_parent"
    		android:layout_height="72dp"    		
    		android:paddingLeft="12dp"
    		android:orientation="vertical" >
		           	    
    	    <TextView 
	        	android:id="@+id/activity_user_name"  
	        	android:paddingTop="2dp"  	        
    	        android:text="Friendly Millertonson"
    			android:layout_width="match_parent"
	    		android:layout_height="wrap_content"    			
    			android:gravity="center_vertical"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:textColor="#FFFFFF"
		        android:shadowColor="#000000"
		        android:shadowDx="3.5"
		        android:shadowDy="3.5"
		        android:shadowRadius="3.0" />
    	    
    	    <TextView
	        	android:id="@+id/activity_group_role"      	        
    	        android:text="@string/group_member"
    	        android:textSize="12sp"    	        
    	        android:layout_gravity="left"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
   		        android:textAppearance="?android:attr/textAppearanceSmall"
   		       	android:textColor="#FFFFFF"
		        android:shadowColor="#000000"
		        android:shadowDx="3.5"
		        android:shadowDy="3.5"
		        android:shadowRadius="3.0" />
    	    
    	</LinearLayout>
    </LinearLayout>        

    
    <TextView
        android:id="@+id/events_for_user_none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/no_user_events"
        android:textStyle="italic"
        android:textAppearance="?android:attr/textAppearanceMedium" />       

   	<ListView
        android:id="@+id/activity_user_events"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
    	android:paddingBottom="8dp"
    	android:paddingLeft="8dp"
    	android:paddingRight="8dp"        
        android:dividerHeight="8dp"
        android:divider="#d0d4d9"        
        android:drawSelectorOnTop="false" />        
    

</LinearLayout>
